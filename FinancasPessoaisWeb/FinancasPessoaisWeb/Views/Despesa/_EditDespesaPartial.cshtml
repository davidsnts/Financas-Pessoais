@model DespesaModel

<div class="modal-dialog">
    <div class="modal-content">
        <form id="formEditDespesa" method="post" action="/Despesa/EditDespesa">
            <div class="modal-header">
                <h4 class="modal-title">Editar Despesa</h4>
                <button type="button" id="edtClose" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <input id="editIdInput" name="id" type="hidden" class="form-control" value="@Model.Id" required>
                <input id="editIdAccountInput" name="idAccount" type="hidden" class="form-control" value="@Model.IdAccount" required>

                <div class="form-group">
                    <label>Descrição</label>
                    <input id="editDescricaoInput" name="descricao" type="text" class="form-control" value="@Model.Descricao" required>
                </div>
                <div class="form-group">
                    <label>Valor</label>
                    <input id="editValorInput" name="valor" type="text" class="form-control" value="@Model.Valor" required>
                </div>
                <div class="form-group">
                    <label>Vencimento</label>
                    <input id="editVencimentoInput" name="vencimento" type="date" class="form-control" value="@Model.Vencimento.ToString("yyyy-MM-dd")" required>

                </div>
            </div>
            <div class="modal-footer">
                <input type="hidden" id="editDespesaId" name="id" value="@Model.Id">
                <input type="button" id="btnCancelar" class="btn btn-default" data-dismiss="modal" value="Cancelar">
                <input type="submit" id="btnEditDespesa" class="btn btn-info" value="Salvar">
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#edtClose").click(function () {
            window.location.href = "/Despesa/Index";
        });
    });

    $(document).ready(function () {
        $("#btnCancelar").click(function () {
            window.location.href = "/Despesa/Index";
        });
    });

</script>

