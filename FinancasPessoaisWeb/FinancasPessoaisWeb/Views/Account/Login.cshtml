@{
    ViewData["Title"] = "Login";
}
@model LoginModel
<section>
    <div class="container py-5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-5 d-none d-md-block">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img1.webp"
                                 alt="login form" class="img-fluid h-100" style="border-radius: 1rem 0 0 1rem;" />
                        </div>
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Login" asp-controller="Account" method="post" >

                                    <div class="d-flex align-items-center mb-3 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">FinançasPessoais</span>
                                    </div>

                                    <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Entrar na sua conta</h5>

                                    <div class="form-outline mb-4">
                                        <input type="text" id="form2Example17" class="form-control form-control-lg" name="CPF" asp-for="CPF" placeholder="CPF"/>
                                        @* <label class="form-label" for="form2Example17">CPF</label> *@
                                        <span asp-validation-for="CPF" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" id="form2Example27" class="form-control form-control-lg" name="Senha" asp-for="Senha" placeholder="SENHA" />
                                       @*  <label class="form-label" for="form2Example27">Senha</label> *@
                                        <span asp-validation-for="Senha" class="text-danger"></span>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="pt-1 mb-1">
                                        <button class="btn btn-dark btn-lg btn-block float-end" type="submit">Entrar</button>
                                    </div>

                                    
                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">Não possui uma conta? <a asp-controller="Account" asp-action="Cadastro" style="color: #393f81;">Cadastre aqui</a></p>
                                    <a asp-controller="Account" asp-action="EsqueceuSenha" class="small text-muted pt-2 mb-2">Esqueceu sua senha?</a><br />

                                    <a href="/Home/Privacy" class="small text-muted pt-1 mb-1">Politica de privacidade</a>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>