@{
    ViewData["Title"] = "Cadastro";
}
@model AccountModel

<section class="vh-90" style="background-color: #9A616D;">
    <div class="container py-5 h-90">
        <div class="row d-flex justify-content-center align-items-center h-90">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">                        
                        <div class="col-md-6 col-lg-7 d-flex align-items-center w-100">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-controller="Account" asp-action="Cadastro" method="post">
                                    <div class="d-flex align-items-center mb-3">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">Cadastro de usuário</span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="text" asp-for="Nome" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Nome">Seu nome</label>
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="number" asp-for="CPF" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="CPF">CPF</label>
                                        <span asp-validation-for="CPF" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="number" asp-for="Telefone" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Telefone">Telefone</label>
                                        <span asp-validation-for="Telefone" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="Senha" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="Senha">Senha</label>
                                        <span asp-validation-for="Senha" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="ConfirmacaoSenha" class="form-control form-control-lg" />
                                        <label class="form-label" asp-for="ConfirmacaoSenha">Confirme sua senha</label>
                                        <span asp-validation-for="ConfirmacaoSenha" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="submit">Confirmar</button>
                                    </div>
                                </form>


                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>